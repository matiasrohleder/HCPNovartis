@{
    ViewData["Title"] = "PDF Reader";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">PDF Reader</h3>
                </div>
                <div class="card-body">
                    <form id="uploadForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="pdfFile">Select PDF File</label>
                            <input type="file" class="form-control-file" id="pdfFile" name="file" accept=".pdf" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Upload and Scan</button>
                    </form>
                    <div id="result" class="mt-3" style="display: none;">
                        <h4>Extracted Text:</h4>
                        <pre id="extractedText" class="border p-3" style="white-space: pre-wrap;"></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pdfReader.js"></script>
}